{% extends 'base.html.twig' %}

{% block page_title 'Homepage' %}
{% block title 'Homepage' %}

{% block body %}
    <p>Welcome to TP4!</p>

    <ul>
        {% for user in users %}
            <li>
                {% if user == app.user %}<strong>{% endif %}
                    <a href="{{ path('user_profile', {'id': user.id}) }}">{{ user.firstname }} {{ user.lastname }} - {{ user.email }}</a>
                {% if user == app.user %}</strong>{% endif %}
            </li>
        {% endfor %}
    </ul>
{% endblock %}
